{
  "description": "Governance hooks â€” inject governance context at session start and scan for hardcoded secrets before file writes",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/secret-scanner.sh",
            "timeout": 500
          }
        ],
        "matcher": "Edit|Write|MultiEdit"
      }
    ]
  }
}
